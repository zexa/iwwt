{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block stylesheets %}
{% endblock %}


{% block body %}
    <h1>Books</h1>
    {% for book in books %}
    <article>
        <hgroup>
            <h3>{{ book.name }}</h3>
            <p>{{ book.author }}</p>
        </hgroup>

        <strong>ISBN:</strong> {{ book.isbn }}
        <br>

        <strong>Publication Date:</strong> {{ book.publication_date }}
        <br>

        <strong>Genres:</strong> {{ book.genres|join(', ') }}
        <br>

        <strong>Number of Copies:</strong> {{ book.num_copies }}
        <br>

        {% if app.user %}
            <button class="secondary">Edit</button>
            <button class="outline">Remove</button>
        {% endif %}
    </article>
    {% endfor %}
{% endblock %}
